# Alshifa AI Medical Assistant - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3001
APP_NAME="Alshifa AI Medical Assistant"

# ==============================================
# FRONTEND SETTINGS
# ==============================================
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=2.0.0

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/alshifa
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alshifa
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==============================================
# REDIS (Caching & Sessions)
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000

# ==============================================
# CORS SETTINGS
# ==============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# EMAIL SERVICE (Optional - for notifications)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Alshifa AI <noreply@alshifa-ai.com>"

# ==============================================
# SMS SERVICE (Optional - for notifications)
# ==============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# FILE STORAGE (Optional - for document uploads)
# ==============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=alshifa-documents

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# ==============================================
# AI/ML SETTINGS
# ==============================================
AI_MODEL_VERSION=1.0.0
AI_CONFIDENCE_THRESHOLD=0.75
ENABLE_AI_LOGGING=true

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_WEB_SEARCH=false
ENABLE_VIDEO_CONSULTATIONS=true
ENABLE_PRESCRIPTION_REFILLS=false
ENABLE_TELEMEDICINE=true

# ==============================================
# EXTERNAL APIs
# ==============================================
# Drug interaction database API
DRUG_API_KEY=your-drug-api-key
DRUG_API_URL=https://api.drugbank.com

# Medical knowledge base
MEDICAL_KB_API_KEY=your-medical-kb-key

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================
# Test database (separate from development)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/alshifa_test

# Seed data on startup (development only)
SEED_DATABASE=false

# Enable debug mode
DEBUG=true
VERBOSE_LOGGING=true

# ==============================================
# PRODUCTION SETTINGS (only for production)
# ==============================================
# HTTPS settings
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Production URLs
PRODUCTION_URL=https://alshifa-ai.com
API_URL=https://api.alshifa-ai.com

# Health check endpoint
HEALTH_CHECK_PATH=/health

# ==============================================
# NOTES
# ==============================================
# - Never commit .env file to version control
# - Use strong, unique secrets in production
# - Rotate secrets regularly
# - Use environment-specific .env files (.env.development, .env.production)
# - Consider using a secrets management service (AWS Secrets Manager, HashiCorp Vault, etc.)
